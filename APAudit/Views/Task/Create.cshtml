@model CreateTaskVM

<div class="container">
    <h3>Параметры задачи</h3>
    <form method="post" asp-controller="Task" asp-action="Create">
        <fieldset>
            <div class="form-group">
                <label asp-for="District" class="form-control-label"></label>
                <select asp-for="District" asp-items="Model.Districts" class="form-control">
                    <option disabled selected value="">Выберите регион</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Operator" class="form-control-label"></label>
                <input class="form-control" asp-for="Operator" />
            </div>
            <div class="form-group">
                <label asp-for="Address" class="form-control-label"></label>
                <input class="form-control" asp-for="Address" />
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="form-control-label"></label>
                <input class="form-control" asp-for="Phone" />
            </div>
            <div class="form-group">
                <label asp-for="Notes" class="form-control-label"></label>
                <textarea asp-for="Notes" class="form-control"></textarea>
            </div>
            <div class="form-group">
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="checkbox" class="form-check-input" />Тестовая задача
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label class="d-block">Перезапускать задачу при ошибке?</label>
                <div class="form-check-inline">
                    <label class="form-check-label">
                        <input type="radio" class="form-check-input" name="isRestartonError" />Да
                    </label>
                </div>
                <div class="form-check-inline">
                    <label class="form-check-label">
                        <input type="radio" class="form-check-input" name="isRestartonError" />Нет
                    </label>
                </div>
            </div>
        </fieldset>
        <button class="btn btn-primary" type="submit">Отправить</button>
    </form>
</div>

@section scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $("input.input-validation-error")
                .closest(".form-group").addClass("has-danger");
        });
    </script>
}